mixin film-comments

    .film-comments
        .film-comments__wrp
            .film-comments__title Комментарии <span>16</span>
            .film-comments__content
                .film-comments__add
                    .film-comments__textarea
                        textarea(placeholder="Ваше сообщение...")
                    .film-comments__send
                        button: +icons('#ic_send', 24)


                .film-comments__list
                    each item in ['user3.jpg', 'user5.jpg', 'user6.jpg', 'user7.jpg']
                        +item-message(item)
                .film-comments__more
                    button.btn.btn-line Показать все


