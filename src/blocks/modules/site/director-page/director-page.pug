mixin card-filmography(data)
    .card-filmography
        .card-filmography__name= data.name
        .card-filmography__link: a(href='#')= data.link

mixin card-film(data)
    .card-film 
        .card-film__cover
            +picture(data.image)
        .card-film__title: a(href='#')= data.title
        .card-film__year 2020
        .card-film__type Российский конкрурс 
        .card-film__rate
            .card-film__rate-jury
                small Рейт. жюри
                span 6.4
            .card-film__rate-viewer
                small Рейт. зрителей
                span 7.2
    
    