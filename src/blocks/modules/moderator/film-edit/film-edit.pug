mixin film-edit()
    .film-edit
      .film-edit__metric
        .film-metric
          .film-metric__title Количество <br> просмотров
          .film-metric__total 98
        .film-metric
          .film-metric__title Средняя оценка <br> зрителей
          .film-metric__total 9.2
        .film-metric
          .film-metric__title Общее время <br> просмотра
          .film-metric__total 10:34
        .film-metric
          .film-metric__title Выбор экпертов
          .film-metric__vote
            .film-metric__like
              +icons('#ic_like', 20)
              span 5
            .film-metric__dislike
              +icons('#ic_dislike', 20)
              span 2
      .film-edit__tabs
        +form-tabs-nav

      .film-tab-container
        .film-tab-item(data-tab-item="ru" class="active")
          .form
            .form__item: .form__subitem: +input-material('text', 'Название фильма', 'Левиафан')
            .form__item
              .form__subitem: +input-material('text', 'Заявитель (ФИО)', 'Екатерина Самойлова')
              .form__subitem: +input-material('text', 'Производитель', 'New Line Cinema')
                 
            .form__item
              .form__subitem: +input-material('tel', 'Телефон', '+7(384)409-45-56')
              .form__subitem: +input-material('email', 'Email', 'leviafan_film@mail.ru')
               

            .form__label Фестиваль
            .form__item
              .form__subitem: +select-edit('Статус', ['В конкурсе','Статус 2'])
              .form__subitem: +select-edit('Программа', ['Полный метр','Программа 2'])
                
              
            .form__label Информация о фильме
            .form__item
              .form__subitem: +select-edit('Страна происхождения', ['Россия','Армения','Китай','Турция'])
              .form__subitem: +input-material('text', 'Жанр', 'драма, криминал')
              
            .form__item
              .form__item 
                .form__subitem: +select-edit('Год производства', ['2020','2021'])
                .form__subitem: input(type="date" value="26.02.2022"  )
              .form__item 
                .form__subitem: +input-material('text', 'Хронометраж (мин)', '141')
                .form__subitem: +select-edit('Язык',['Русский','English'])

            .form__label информация о съемочной группе
            .form__item
              .form__subitem: +input-material('text', 'ФИО', 'Олег Негин')
              .form__subitem: input(type="text" name="post[]" placeholder="Должность" disabled value="Продюсер") 
                
            .form__item
              .form__subitem: +input-material('text', 'ФИО', 'Андрей Звягинцев')
              .form__subitem: input(type="text" name="post[]" disabled value="Режиссер") 
               
            .form__item
              .form__subitem: .form__note: span Заполнить карточку режисера 

            .form__group(data-repeeat="container")
              .form__item
                .form__subitem: +input-material('text', 'ФИО', 'Михаил Кричман')
                .form__subitem: input(type="text" name="post[]" disabled value="Оператор")
              .form__item
                .form__subitem: +input-material('text', 'ФИО', 'Филип Гласс')
                .form__subitem: input(type="text" name="post[]" disabled value="Звукорежиссер")
            
            .form__item
              .form__subitem: .form__note: span(data-repeeat="add") + Добавить члена съемочной группы
            
            .form__label Логлайн
            .form__item
              .form__subitem: textarea(placeholder="Описание фильма") Автослесарь Николай Сергеев живет со второй женой Лилей и сыном от первого брака в маленьком северном городке на берегу моря. Нечистый на руку мэр города Шелевят пытается изъять его дом и землю для собственных нужд. После двух проигранных судов Николай обращается за помощью к бывшему сослуживцу Дмитрию, успешному столичному адвокату. Но приезд московского гостя лишь усложняет и без того непростую жизнь Николая.

            .form__label Расписание показов
            .form__item
              .form__subitem
                .lineup-container(data-lineup="container"): +lineup()

                
                

            .form__item
              .form__subitem
                .form__note.form__note--col2
                  span(data-lineup="repeeat") + Добавить дату и время
                  +checkbox('Фильм в постоянном доступе')
            .form__item
              .form__subitem
                .form__submit: button.btn(type="submit") сохранить


